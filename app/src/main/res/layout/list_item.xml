<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_10sp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dim_10sp"
            android:fontFamily="@font/caviar_dreams"
            android:text="id: 20180306301"
            android:textColor="@color/orderTextColor_id"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dim_10sp"
            android:fontFamily="@font/caviar_dreams"
            android:text="08.03.2018"
            android:textColor="@color/orderTextColor_deadline"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tvLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dim_10sp"
            android:layout_marginBottom="@dimen/dim_10sp"
            android:fontFamily="@font/caviar_dreams"
            android:text="Русский - Английский"
            android:textSize="@dimen/dim_20sp"
            android:textStyle="italic" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dim_10sp"
            android:fontFamily="@font/caviar_dreams"
            android:text="Политический"
            android:textColor="@color/orderTextColor_direction"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/caviar_dreams"
            android:text="56"
            android:textColor="@color/orderTextColor_pagecount"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPageCountPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvPageCount"
            android:fontFamily="@font/caviar_dreams"
            android:text=" стр."
            android:textColor="@color/orderTextColor_pagecount"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dim_10sp"
            android:fontFamily="@font/caviar_dreams"
            android:text="10 000 тг."
            android:textColor="@color/orderTextColor_price"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="@dimen/dim_10sp"
        android:background="@android:color/holo_blue_dark" />

</LinearLayout>