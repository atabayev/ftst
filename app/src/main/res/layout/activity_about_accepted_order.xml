<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.AboutNewOrderActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5sp"
            android:paddingLeft="5sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/border"
            android:layout_marginStart="@dimen/dim_10sp"
            android:layout_marginEnd="@dimen/dim_10sp"
            android:stretchColumns="*">

            <TableRow
                android:background="@color/tvTextColor"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <TextView
                    android:id="@+id/aoaID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="@string/aoa_id"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />

                <TextView
                    android:id="@+id/aoaIdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="20180306301"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />
            </TableRow>

            <TableRow
                android:background="@color/tvHintTextColor"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <TextView
                    android:id="@+id/aoaDeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="@string/aoa_deadline"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />

                <TextView
                    android:id="@+id/aoaDeadlineText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="10.09.2018"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />
            </TableRow>

            <TableRow
                android:background="@color/tvTextColor"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <TextView
                    android:id="@+id/aoaLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="@string/aoa_language"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />

                <TextView
                    android:id="@+id/aoaLanguageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="Русский - Английский"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />
            </TableRow>

            <TableRow
                android:background="@color/tvHintTextColor"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <TextView
                    android:id="@+id/aoaDirection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="@string/aoa_direction"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />

                <TextView
                    android:id="@+id/aoaDirectionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="ИТ, Политика"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />
            </TableRow>

            <TableRow
                android:background="@color/tvTextColor"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <TextView
                    android:id="@+id/aoaPageCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="@string/aoa_page_count"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />

                <TextView
                    android:id="@+id/aoaPageCountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="00 стр."
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />
            </TableRow>

            <TableRow
                android:background="@color/tvHintTextColor"
                android:paddingStart="10sp"
                android:paddingEnd="10sp">

                <TextView
                    android:id="@+id/aoaPrice"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="@string/aoa_price"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />

                <TextView
                    android:id="@+id/aoaPriceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviar_dreams"
                    android:text="00000 тенге"
                    android:textColor="@color/activityBg"
                    android:textSize="@dimen/dim_14sp" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/aoa_btn_dwn"
            android:drawableEnd="@drawable/tg"
            android:drawablePadding="-15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/bg_btn"
            android:fontFamily="@font/caviar_dreams"
            android:paddingStart="5sp"
            android:paddingLeft="5sp"
            android:paddingTop="5sp"
            android:paddingEnd="@dimen/dim_10sp"
            android:paddingRight="@dimen/dim_10sp"
            android:paddingBottom="5sp"
            android:text="@string/aoa_btn_download"
            android:textColor="@color/btnTextColor"
            android:textSize="18sp"
            android:textStyle="italic" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2sp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="20sp"
            android:background="@color/colorAccent" />

        <Button
            android:id="@+id/aoa_btn_finish"
            android:drawableEnd="@drawable/send"
            android:drawablePadding="-15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/bg_btn"
            android:fontFamily="@font/caviar_dreams"
            android:paddingStart="5sp"
            android:paddingLeft="5sp"
            android:paddingTop="5sp"
            android:paddingEnd="@dimen/dim_10sp"
            android:paddingRight="@dimen/dim_10sp"
            android:paddingBottom="5sp"
            android:text="@string/aoa_btn_finish"
            android:textColor="@color/btnTextColor"
            android:textSize="18sp"
            android:textStyle="italic" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>